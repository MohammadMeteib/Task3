@model User
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<form asp-action="Login" method="post">
    <table class="table table-bordered">
        
            <tr>
            <td><label asp-for="Email"></label></td>
            <td>
                <input asp-for="Email" placeholder="Enter User Email" class="form-control" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </td>

        </tr>
        <tr>
            <td><label asp-for="Password"></label></td>
            <td>
                <input asp-for="Password" placeholder="Enter Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </td>
        </tr>
        <tr>
            <td> <input type="submit" class="btn btn-success" value="Save" /></td
                 <a asp-action="LoginHome"></a>
        </tr>
    </table>
</form>

